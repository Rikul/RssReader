<!-- Views/Dialogs/AddEditFeedDialog.xaml -->
<Window x:Class="RssReader.Views.Dialogs.AddEditFeedDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RssReader.Views.Dialogs"
        mc:Ignorable="d"
        Title="Add Feed" 
        Height="300" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundColor}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   x:Name="dialogTitleText"
                   Text="Add New Feed" 
                   FontSize="18" FontWeight="SemiBold" 
                   Margin="0,0,0,15"
                   Foreground="{DynamicResource PrimaryTextColor}"/>
        
        <!-- Name -->
        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="Name:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,10,0"
                   Foreground="{DynamicResource PrimaryTextColor}"/>
        
        <TextBox Grid.Row="1" Grid.Column="1" 
                 x:Name="nameTextBox" 
                 Margin="0,0,0,10"/>
        
        <!-- URL -->
        <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="URL:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,10,0"
                   Foreground="{DynamicResource PrimaryTextColor}"/>
        
        <TextBox Grid.Row="2" Grid.Column="1" 
                 x:Name="urlTextBox" 
                 Margin="0,0,0,10"/>
        
        <!-- Category -->
        <TextBlock Grid.Row="3" Grid.Column="0" 
                   Text="Category:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,10,0"
                   Foreground="{DynamicResource PrimaryTextColor}"/>
        
        <TextBox Grid.Row="3" Grid.Column="1" 
                 x:Name="categoryTextBox" 
                 Margin="0,0,0,10"/>
        
        <!-- Description -->
        <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                   TextWrapping="Wrap" Margin="0,10,0,0"
                   Text="Enter the details of the RSS feed. You can find the URL of a feed on the website you want to subscribe to. The category helps you organize your feeds."
                   Foreground="{DynamicResource SecondaryTextColor}"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            
            <Button Content="Cancel" 
                    Width="80" Height="30" 
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            
            <Button Content="Save" 
                    Width="80" Height="30"
                    IsDefault="True"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
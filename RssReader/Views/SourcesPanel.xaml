<!-- Views/SourcesPanel.xaml -->
<UserControl x:Class="RssReader.Views.SourcesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RssReader.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">
    
    <Grid Background="{DynamicResource SecondaryColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Feeds" Margin="10,15,10,10" 
                   FontSize="16" FontWeight="SemiBold"
                   Foreground="{DynamicResource PrimaryTextColor}"/>
        
        <!-- Source List -->
        <ListView x:Name="sourceListView" Grid.Row="1" Margin="5,0"
                  BorderThickness="0" Background="Transparent"
                  SelectionChanged="SourceListView_SelectionChanged">
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="Margin" Value="0,2"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource HighlightColor}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource HighlightColor}"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.Resources>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="{Binding Name}" Grid.Column="0"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   TextTrimming="CharacterEllipsis"/>
                        
                        <TextBlock Text="{Binding UnreadCount}" Grid.Column="1"
                                   Foreground="{DynamicResource AccentColor}"
                                   Visibility="{Binding HasUnread, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   Margin="5,0,0,0" FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Margin="5"
                                       Foreground="{DynamicResource SecondaryTextColor}"
                                       FontWeight="SemiBold"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>
        
        <!-- Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,10,10,15" HorizontalAlignment="Center">
            <Button x:Name="addButton" Content="Add" Margin="0,0,5,0" Padding="10,5"
                    Click="AddButton_Click"/>
            <Button x:Name="editButton" Content="Edit" Margin="5,0" Padding="10,5"
                    Click="EditButton_Click"/>
            <Button x:Name="deleteButton" Content="Delete" Margin="5,0,0,0" Padding="10,5"
                    Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
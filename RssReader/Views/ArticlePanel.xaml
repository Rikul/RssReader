<!-- Views/ArticlePanel.xaml -->
<UserControl x:Class="RssReader.Views.ArticlePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RssReader.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    
    <Grid Background="{DynamicResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Article Header -->
        <Border Grid.Row="0" BorderThickness="0,0,0,1" 
                BorderBrush="{DynamicResource HighlightColor}" 
                Padding="15,15,15,10">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button x:Name="favoriteButton" Margin="0,0,10,0"
                            ToolTip="Toggle Favorite"
                            Click="FavoriteButton_Click">
                        <TextBlock x:Name="favoriteIcon" Text="â˜…" FontSize="16" Foreground="{DynamicResource SecondaryTextColor}"/>
                    </Button>
                    
                    <Button x:Name="openInBrowserButton" Content="Open in Browser" Padding="8,3"
                            ToolTip="Open article in external browser"
                            Click="OpenInBrowserButton_Click"/>
                </StackPanel>
                
                <StackPanel>
                    <TextBlock x:Name="titleTextBlock" Text="Article Title" 
                               TextWrapping="Wrap" FontSize="18" FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextColor}"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock x:Name="sourceTextBlock" Text="Source Name" 
                                   Foreground="{DynamicResource SecondaryTextColor}" 
                                   FontSize="12"/>
                        
                        <TextBlock Text=" | " Foreground="{DynamicResource SecondaryTextColor}" 
                                   FontSize="12"/>
                        
                        <TextBlock x:Name="dateTextBlock" Text="Publish Date" 
                                   Foreground="{DynamicResource SecondaryTextColor}" 
                                   FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Border>
        
        <!-- Article Content -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" 
                      VerticalScrollBarVisibility="Auto">
            <WebBrowser x:Name="contentWebBrowser" 
                        Margin="10" 
                        LoadCompleted="ContentWebBrowser_LoadCompleted"/>
        </ScrollViewer>
        
        <!-- Empty State (when no article is selected) -->
        <Border x:Name="emptyStatePanel" Grid.Row="0" Grid.RowSpan="2"
                Background="{DynamicResource BackgroundColor}" 
                Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="No Article Selected" 
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource SecondaryTextColor}"/>
                
                <TextBlock Text="Select an article from the list above to view its content" 
                           Margin="0,10,0,0" TextAlignment="Center"
                           Foreground="{DynamicResource SecondaryTextColor}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>